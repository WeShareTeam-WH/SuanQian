<template name="iconInputTemplate">  
  <view class="weui-cell weui-cell_input user-input">
    <view class='container'>
      <view class='item' style='display: flex; height: 80rpx; width: 90%;align-items: center;'>
        <image src='{{icon1}}' style='width: 50rpx; height: 50rpx;'></image>
        <input class='user-name' type='text' name='userName' bindinput='inputName' data-user-id='{{userId}}' value='{{userName}}'></input>
      </view>
    </view>
    <view class='container'>
      <view class='item' style='display: flex; height: 80rpx; width: 90%;align-items: center;'>
        <image src='{{icon2}}' style='width: 50rpx; height: 50rpx;'></image>
        <input class='paid-money' type='text' name='paidMoney' bindinput='inputMoney' data-user-id="{{userId}}" value='{{useMoney}}'></input>
      </view>
    </view>
    <image src='../../source/delete.png' style='width: 50rpx; height: 50rpx;' data-user-id='{{userId}}' catchtap='deleteUserItem'></image>
  </view>
</template>
